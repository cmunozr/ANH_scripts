do.install <- function(UptoDate = FALSE){
rqurd <- c("openxlsx", "BiodiversityR", "MASS", "tidyverse", "data.table", "iNEXT", "reshape2", "ggpubr",
"ggpmisc", "evaluate", "maptools", "rgdal", "sp", "lattice", "ggplot2", "rgeos", "ade4", "Rtsne",
"reshape2", "devtools")
if(UptoDate == FALSE){
for(p in rqurd ){
if (!is.element(p, installed.packages()[ ,1])){			#if package is not installed
# r <- getOption("repos")								#assign R mirror for download
# r["CRAN"] <- "http://cran.us.r-project.org"
# options(repos = r)
# rm(r)
install.packages(p, dep = TRUE)			#install tuneR
require(p, character.only = TRUE)
}
}
devtools::install_github("slowkow/ggrepel", upgrade = F)
library(ggrepel)
}else{
for (p in rqurd){
print(c("installing", p))
install.packages(p, dep = TRUE)			#install tuneR
}
devtools::install_github("slowkow/ggrepel", force = T)
library(ggrepel)
}
try(library(p,character.only=T))
}
